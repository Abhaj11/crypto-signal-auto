rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users Collection
    match /users/{userId} {
      // Allow users to read their own document after they are logged in.
      allow read: if request.auth.uid == userId;

      // Allow users to update their own document after they are logged in.
      allow update: if request.auth.uid == userId;
      
      // Allow a user document to be created as long as the user's ID in the
      // document data matches the authenticated user ID of the person creating it.
      // This is necessary for the sign-up process.
      allow create: if request.auth.uid == request.resource.data.uid;

      // Do not allow client-side deletes.
      allow delete: if false;
    }

    // Trades Collection
    match /trades/{tradeId} {
      // Allow a user to read their own trades.
      allow read: if request.auth.uid == resource.data.userId;
      
      // Allow a user to create a trade for themselves.
      allow create: if request.auth.uid == request.resource.data.userId;

      // Do not allow client-side updates or deletes. This must be handled
      // by a trusted server environment (like our /api/check-trades route).
      allow update, delete: if false;
    }
  }
}
