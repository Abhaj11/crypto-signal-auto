rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users Collection
    match /users/{userId} {
      // Allow users to read and write to their own document.
      // This covers reading their profile and updating things like subscription status.
      allow read, write: if request.auth.uid == userId;
    }

    // Trades Collection
    match /trades/{tradeId} {
      // Allow a user to read their own trades.
      allow read: if request.auth.uid == resource.data.userId;
      
      // Allow a user to create a trade for themselves.
      allow create: if request.auth.uid == request.resource.data.userId;

      // Do not allow client-side updates or deletes. This must be handled
      // by a trusted server environment (like our /api/check-trades route).
      allow update, delete: if false;
    }
  }
}
